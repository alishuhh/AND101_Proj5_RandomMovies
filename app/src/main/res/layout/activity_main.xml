<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id = "@+id/movie_randomizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text = "@string/instructions"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.10"
        />


    <ImageView
        android:id="@+id/movie_image"
        android:layout_width="200dp"
        android:layout_height="300dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/movie_randomizer"
        app:layout_constraintVertical_bias="0.3"

        app:srcCompat="@drawable/despicableme_movie_poster" />

    <TextView
        android:id = "@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text = "Movie Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"

        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="@id/movie_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.1"
        />

    <TextView
        android:id = "@+id/movie_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text = "Movie Genre"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"

        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@id/movie_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.1"
        />

    <Button
        android:id="@+id/movie_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Next Movie"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/movie_genre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>